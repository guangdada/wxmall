/* pages/changeCoupon/changeCoupon.wxss */

.store_coupon {
  text-align: center;
  font-size: 32rpx;
  padding: 10rpx 0;
}

.coupon-left-content {
  /* width: 35%; */
  position: absolute;
}

.coupon-left-price {
  font-size: 64rpx;
  font-weight: bold;
  padding: 12rpx 14rpx 8rpx 14rpx;
  color: #fff;
}

.coupon-left-des {
  font-size: 24rpx;
  padding: 12rpx 20rpx 6rpx 20rpx;
  color: #fff;
}

.coupon-left-time {
  font-size: 24rpx;
  padding: 4rpx 20rpx 6rpx 20rpx;
  color: #fff;
}

.coupon-right-content {
  position: absolute;
  margin: 10rpx 0;
  right: 30rpx;
  border-left: 1px dashed #fcb999;
  padding-left: 20rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.coupon-right-name {
  color: #fff;
  font-size: 32rpx;
}

.coupon-right-condition {
  color: #ff2d4b;
  background-color: #fff;
  font-size: 28rpx;
  margin: 10px 0;
  text-align: left;
  padding: 8rpx 6rpx;
  width: 290rpx;
}

.coupon-right-time {
  color: #fff;
  font-size: 24rpx;
  margin: 20rpx 0;
}

.change-button {
  font-size: 34rpx;
  text-align: center;
  padding: 2rpx 6rpx;
  background-color: #f1f1f1;
  color: #ff6821;
  border-radius: 10rpx;
  margin: 12rpx;
}

.coupon-whole-content {
  height: 212rpx;
  margin-bottom: 30rpx;
  background-color: #ff6821;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

/* 错误提示 */

.toptips {
  display: block;
  position: fixed;
  -webkit-transform: translateZ(0) translateY(-100%);
  width: 100%;
  /* 至少有一行的高度，保证第一次动画显示正常 */
  min-height: 32px;
  top: 0;
  line-height: 2.3;
  font-size: 14px;
  text-align: center;
  color: #fff;
  background-color: #e64340;
  z-index: 110;
  /* 动画部分 */
  transition: all 0.4s ease;
}

.toptips--show {
  -webkit-transform: translateZ(0) translateY(0);
}