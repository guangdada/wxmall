  -webkit-transform: scale(0.8);
  -webkit-min-device-pixel-ratio: 0;
  -webkit-letter-spacing: 1px;
}

.m-uc-menu .list .item .txt {
  display: block;
  color: #666;
  font-size: 24rpx;
  margin-top: 9rpx;
}

.m-uc-menu .menu-icon {
